---
import RejectCard from "../components/RejectCard";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const RejectCards = [
  {
    bsline: "We prefer teams with previous exits",
    signoff: "Get back to us when you have a track record.",
    name: "Blocker Capital",
    className: " relative",
  },

  {
    bsline: "We're looking for teams with more traction",
    signoff: "Feel free to apply again in a few months.",
    name: "Gatekeeper Ventures",
    className: " relative",
  },
  {
    bsline: "Great hustle, but we need proven operators",
    signoff: "Best of luck with your startup!",
    name: "Establishment Equity",
    className: " relative",
  },
  {
    bsline: "Impressive, but we need a warm introduction",
    signoff: "Keep at it with your fundraising journey!",
    name: "FAANG Alumni Fund",
    className: " relative",
  },
  {
    bsline: "We prefer technical founders with CS degrees",
    signoff: "Wishing you all the best in your entrepreneurial endeavors.",
    name: "Status Quo Syndicate",
    className: " relative",
  },

  {
    bsline: "We typically invest in Stanford/Harvard founders",
    signoff: "Don't take it personally. Keep building!",
    name: "Ivy League Labs",
    className: " relative",
  },
];
---

<Layout>
  <section
    class="relative flex flex-col pl-32 py-32 h-screen w-screen bg-[url('/src/assets/bg.svg')] bg-[#FEEDCC]! bg-cover bg-no-repeat bg-center overflow-hidden"
  >
    <!-- Faint Dots Pattern Overlay -->
    <div
      class="absolute inset-0 z-0 pointer-events-none"
      style="background-image: url('data:image/svg+xml;utf8,<svg width=\'40\' height=\'40\' viewBox=\'0 0 40 40\' fill=\'none\' xmlns=\'http://www.w3.org/2000/svg\'><circle cx=\'2\' cy=\'2\' r=\'2\' fill=\'%23FBBF24\' fill-opacity=\'0.08\'/><circle cx=\'38\' cy=\'38\' r=\'2\' fill=\'%23FBBF24\' fill-opacity=\'0.08\'/></svg>'); background-size: 40px 40px; opacity:0.5;"
    >
    </div>

    <!-- Floating UI Cards -->
    <div
      class="absolute bottom-[5%] -right-[7%] -translate-x-1/2 z-30 w-64 p-4 bg-white/30 rounded-xl shadow-lg border border-gray-200 backdrop-blur-md"
    >
      <div class="flex items-center gap-3">
        <img
          src="https://randomuser.me/api/portraits/men/32.jpg"
          class="w-10 h-10 rounded-full"
          alt="Founder"
        />
        <div>
          <div class="font-bold text-sm">Alex Founder</div>
          <div class="text-xs text-gray-500">
            Building: <span class="font-semibold">Appify</span>
          </div>
        </div>
      </div>
      <div class="mt-2 text-xs text-gray-700">
        "Looking for a technical cofounder!"
      </div>
    </div>
    <div
      class="absolute bottom-[150px] left-[320px] z-20 w-40 p-3 bg-white/30 rounded-lg shadow border border-gray-100 backdrop-blur"
    >
      <div class="text-xs font-semibold">💬 "Let's connect!"</div>
    </div>
    <div
      class="absolute bottom-24 right-32 z-20 w-96 max-w-xs p-6 bg-white/50 rounded-2xl shadow-xl border border-gray-200 backdrop-blur-lg flex flex-col gap-2"
    >
      <div class="font-bold text-lg text-[#FBBF24]">
        🚀 Build a Mobile MVP, Fast!
      </div>
      <div><p class="text-xs text-gray-400">Co-Founder Challenge</p></div>
      <div class="text-xs text-gray-700">
        Prototype a React Native app for peer-to-peer skill matching. All
        experience levels welcome—show what you can do!
      </div>
      <div class="flex flex-wrap gap-2 mt-2">
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >React Native</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >UI/UX</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >Async</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >Equity Trial</span
        >
      </div>
      <button
        class="mt-3 self-start bg-[#FBBF24] text-white text-xs font-bold px-4 py-1.5 rounded shadow hover:bg-yellow-400 transition"
      >
        Join Challenge
      </button>
    </div>

    <!-- Chained Conversation Bubbles (Feature-focused, no tech logos) -->
    <div
      class="absolute bottom-1/4 left-[18%] z-20 w-44 p-3 bg-white/30 rounded-lg shadow border border-gray-100 backdrop-blur"
    >
      <div class="text-xs font-semibold">"I've got this idea…"</div>
    </div>
    <div
      class="absolute top-[12%] right-[26%] z-20 w-38 p-3 bg-white/30 rounded-lg shadow border border-gray-100 backdrop-blur"
    >
      <div class="text-xs font-semibold">"Looking to raise!"</div>
    </div>

    <!-- <div class="absolute top-[60%] left-[42%] z-20 w-60 p-3 bg-white/30 rounded-lg shadow border border-gray-100 backdrop-blur">
      <div class="text-xs font-semibold">
        "I want async, introvert-friendly networking"
      </div>
    </div> -->
    <div
      class="absolute bottom-[64%] right-[30%] z-[60] w-[500px] p-0 bg-transparent flex items-center"
    >
      <!-- Computer Mouse Icon -->
      <span class="inline-flex items-center justify-center w-8 h-8 ml-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#FBBF24"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"
          ></path>
        </svg>
      </span>
      <!-- Search Bar Mockup -->
      <input
        type="text"
        value="Show me founders with real-world skills, not just credentials"
        readonly
        class="bg-white/30 border border-gray-200 rounded-full shadow text-sm font-medium w-full px-4 py-2 ml-2 text-gray-700 placeholder-gray-400 focus:outline-none cursor-default"
        style="pointer-events: none;"
      />
    </div>

    <!-- Main Hero Content -->
    <div
      class="flex flex-col items-start max-w-4xl text-left text-wrap z-10 relative"
    >
      <h1
        class="text-[96px] font-regular tracking-tight font-['Fellix',_sans-serif] leading-[1] text-[#2A2A2A]"
      >
        Some Assembly Required
      </h1>
      <p
        class="text-[24px] max-w-2xl font-['Fellix',_sans-serif] pt-6 text-[#2A2A2A]"
      >
        Stop networking. Start building. The first founder platform designed for
        doing, not just talking. Find your missing pieces and create something
        extraordinary.
      </p>
      <div class="flex gap-2 font-['Fellix',_sans-serif] pt-4">
        <button
          class="bg-[#FBBF24] text-white text-md px-4 py-1.5 rounded shadow hover:bg-yellow-400 transition"
          >Get Started</button
        >
        <button
          class="bg-white text-[#2A2A2A]text-md px-4 py-1.5 rounded shadow hover:bg-yellow-400 hover:text-white transition"
          >Learn More</button
        >
      </div>
    </div>
  </section>

  <!-- Creative Problem/Solution Timeline Section -->
  <section
    class="relative w-screen min-h-screen bg-[#FEEDCC] pt-32 px-4 flex flex-col overflow-x-clip"
  >
    <div
      class="flex flex-col pl-24 pr-32 pt-20 pb-64 rounded-3xl text-white bg-amber-950"
    >
      <h2
        class="text-[96px] relative font-['Fellix',_sans-serif] pt-12 text-white text-shadow-2xl pb-20"
      >
        What's the deal?
      </h2>
      <div
        class="bg-amber-600 p-20 rounded-xl drop-shadow-lg flex flex-col gap-2 w-[90%] relative z-20"
      >
        <h3 class="text-5xl font-['Fellix',_sans-serif]">
          Tired of swiping for the most important decisions in your life?
        </h3>
        <p class="text-xl font-['Fellix',_sans-serif]">
          Skip the games. Browse founders like a database, filter by real
          skills, and connect with purpose.
        </p>
      </div>
      <div
        class="bg-amber-700 p-20 pr-32 rounded-xl w-[95%] drop-shadow-xl flex flex-col gap-2 relative bottom-10 ml-10 z-10"
      >
        <h3 class="text-5xl font-['Fellix',_sans-serif] pt-4">
          Went down a different walk of life that gave you skills without
          credentials?
        </h3>
        <p class="text-xl font-['Fellix',_sans-serif]">
          We empower founders to prove their worth through real-world
          challenges, peer review, and portfolio verification.
        </p>
      </div>
      <div
        class="bg-amber-800 p-20 rounded-xl w-[100%] drop-shadow-lg flex flex-col gap-2 relative ml-20 z-0 bottom-20"
      >
        <h3 class="text-5xl font-['Fellix',_sans-serif] pt-4">
          Had enough of trying to play by the same old stale handbook?
        </h3>
        <p class="text-xl font-['Fellix',_sans-serif]">
          Founders are trailblazers, not copycats. We give you the tools to
          write your own playbook and hit it out of the park.
        </p>
      </div>
    </div>
    <div
      class="grid grid-cols-3 gap-x-8 translate-y-[-50%] px-12 text-[#2A2A2A]"
    >
      <div
        class="bg-[#ffecd5] px-8 py-20 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300 relative top-0 left-0"
        style="background-image: url('/src/assets/merit.svg'); background-size: cover; background-position: center;"
      >
        <h4 class="text-5xl font-['Fellix',_sans-serif] my-6">
          Merit Over Credentials
        </h4>
        <p class="text-xl font-['Fellix',_sans-serif] flex flex-col gap-8">
          <span class="font-bold block"
            >Show your GitHub, not your diploma.</span
          >Here, founders are judged on real skills and actual work, not where
          they went to school.
        </p>
      </div>
      <div
        class="bg-[#ffecd5] px-8 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300"
      >
        <h4 class="text-5xl font-['Fellix',_sans-serif] mt-6">
          Complete Freedom
        </h4>
        <div class="font-['Fellix',_sans-serif] text-xl">
          <ul class="list-disc list-inside mb-4 mt-2">
            <li>No artificial limits.</li>
            <li>No daily swipe caps.</li>
            <li>No algorithm.</li>
          </ul>
          <span class="block"
            >Browse and filter the entire founder database based on your needs
            and discover connections at your own pace.</span
          >
        </div>
      </div>
      <div
        class="bg-[#ffecd5] px-8 py-20 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300"
      >
        <h4 class="text-5xl font-['Fellix',_sans-serif] my-6">
          Built for Every Founder
        </h4>
        <p class="text-xl font-['Fellix',_sans-serif]">
          Stop worrying that you're not cut from the same boring cloth. Whether
          you're introverted, international, or unconventional—there's a place
          for you here.
        </p>
      </div>
    </div>
  </section>
  <section
    class="pb-32 min-h-screen flex items-start justify-start bg-[#FEEDCC]"
  >
    <div class="w-full relative flex flex-col gap-8 items-end">
      <div class="flex flex-col max-w-7xl items-end">
        <div class="flex flex-col items-end mr-24 max-w-2xl">
          <h2
            class="text-[96px] font-['Fellix',_sans-serif] text-left text-[#2A2A2A] leading-tight lg:whitespace-nowrap"
          >
            The <span class="text-amber-400 font-bold">Almost Investors</span
            ><span class="block text-[#2A2A2A] text-4xl text-right"
              >So close to backing the next big thing</span
            >
          </h2>
          <p class="text-xl font-['Fellix',_sans-serif] text-left pt-4">
            Rejections represent trillions in missed returns from investors who
            chase credentials over creativity. While they stick to their tired
            playbook, the next generation of unicorns is building in plain
            sight. <span class="block my-2">Tired of explaining why your unconventional path makes you
            the perfect founder? </span>
            <span class="block"></span>Stop justifying your journey to people who
            wouldn't recognize innovation if it came with a Harvard MBA. </span>
            <span class="block mt-2 font-bold">Your weird is our wonderful.</span>
          </p>
        </div>
        <div class="flex flex-col gap-8 items-end justify-center">
          <div
            class="w-fit relative  rounded-l-2xl p-12 bg-amber-950 text-white m-24 mr-0"
          >
            <div class="relative">
              <h2
                class="text-[48px] font-['Fellix',_sans-serif] p-6 pb-0 leading-tight"
              >
                The Catch-22 Compilation
              </h2>
              <div class="flex items-center justify-center">
                <span
                  class="text-[72px] absolute left-0 -top-20 -rotate-16 drop-shadow-2xl"
                  >🗑️</span
                >
                <span
                  class="text-[72px] absolute right-0 -top-16 rotate-12 drop-shadow-2xl"
                  >🤡</span
                >
              </div>
              <h4 class="text-2xl font-['Fellix',_sans-serif] p-6 pt-0">
                It's time to start making sense.
              </h4>
            </div>
            <ul
              class="list-none list-inside text-xl font-['Fellix',_sans-serif] flex flex-col gap-4"
            >
              <li
                class="p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-2"
              >
                <span class="block">Warm introductions only.</span>
                <span
                  class="block text-sm bg-amber-800 text-white rounded-lg p-4"
                  >Translation: I need you to know people you don't know.</span
                >
              </li>
              <li
                class="p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-2"
              >
                <span class="block"> Traction required to get traction.</span>
                <span
                  class="block text-sm bg-amber-800 text-white rounded-lg p-4"
                  >Translation: Build a product that people want before you have
                  the resources to build it.</span
                >
              </li>
              <li
                class="p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-2"
              >
                <span class="block">
                  Need a team to get funding to hire a team.</span
                >
                <span
                  class="block text-sm bg-amber-800 text-white rounded-lg p-4"
                  >Translation: Be rich enough to work for free while recruiting
                  other people to also work for free.</span
                >
              </li>
              <li
                class="p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-2"
              >
                <span class="block">
                  Prove market fit before building product.
                </span>
                <span
                  class="block text-sm bg-amber-800 text-white rounded-lg p-4"
                  >Translation: Convince people to buy something that doesn't
                  exist yet.</span
                >
              </li>
              <li
                class="p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-2"
              >
                <span class="block">
                  Must have paying customers to get funding.
                </span>
                <span
                  class="block text-sm bg-amber-800 text-white rounded-lg p-4"
                  >Translation: Bootstrap to profitability, then we'll give you
                  money you no longer desperately need.</span
                >
              </li>
            </ul>
          </div>
        </div>
        <div
          class="flex flex-col gap-4 absolute top-0 mt-40 left-0 bg-amber-950 p-12 pl-0 rounded-r-2xl"
        >
          <div class="flex flex-col gap-2 pl-6 mb-2">
            <h2
              class="text-[48px] font-['Fellix',_sans-serif] text-white leading-tight"
            >
              The Rejection Collection
            </h2>
            <p class="text-xl font-['Fellix',_sans-serif] text-white">
              Greatest hits from the gatekeepers who missed the memo.
            </p>
          </div>
          {RejectCards.map((card) => <RejectCard {...card} />)}
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes bounce-slow {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-16px);
      }
    }
    .animate-bounce-slow {
      animation: bounce-slow 3s infinite;
    }
    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-8px);
      }
    }
    .animate-float {
      animation: float 4s ease-in-out infinite;
    }
  </style>
</Layout>

