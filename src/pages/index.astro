---
import RejectCard from "../components/RejectCard";
import Layout from "../layouts/Layout.astro";
import signature from "../assets/signature.svg";
import "../styles/global.css";
import ProfileStandard from "../components/screens/ProfileStandard";
import ProfileCira from "../components/screens/ProfileCira";

const RejectCards = [
  {
    bsline: "We prefer teams with previous exits",
    signoff: "Get back to us when you have a track record.",
    name: "Blocker Capital",
    className: " relative",
  },

  {
    bsline: "We're looking for teams with more traction",
    signoff: "Feel free to apply again in a few months.",
    name: "Gatekeeper Ventures",
    className: " relative",
  },
  {
    bsline: "Great hustle, but we need proven operators",
    signoff: "Best of luck with your startup!",
    name: "Establishment Equity",
    className: " relative",
  },
  {
    bsline: "Impressive, but we need a warm introduction",
    signoff: "Keep at it with your fundraising journey!",
    name: "FAANG Alumni Fund",
    className: " relative",
  },
  {
    bsline: "We prefer technical founders with CS degrees",
    signoff: "Wishing you all the best in your entrepreneurial endeavors.",
    name: "Status Quo Syndicate",
    className: " relative",
  },

  {
    bsline: "We typically invest in Stanford/Harvard founders",
    signoff: "Don't take it personally. Keep building!",
    name: "Ivy League Labs",
    className: " relative",
  },
];

const clauses = [
  "🎯 Merit beats credentials, always.",
  "🚀 Your work speaks louder than your words.",
  "💡 Great ideas come from unexpected places.",
  "🛠️ Builders change the world, not talkers.",
  "⚡ Execution trumps explanation.",
  "🌟 Every founder's journey is valid.",
  "🔥 Innovation happens when you stop following rules.",
  "💪 Your potential matters more than your past.",
  "🎨 Creativity beats conformity.",
  "🌍 The future belongs to those who build it.",
];

const manifestoTitle = "The Cira Manifesto";
const manifestoSubtitle = "What We Stand For.";
const manifestoClosingLine = "This is our declaration of independence from BS.";
---

<Layout>
  <section
    class="relative flex flex-col px-4 sm:px-6 md:px-12 lg:px-20 xl:px-32 py-12 sm:py-16 md:py-20 lg:py-28 xl:py-32 min-h-screen w-full bg-[#FEEDCC] overflow-hidden"
  >
    <!-- Background Pattern -->
    <div
      class="absolute inset-0 z-0 pointer-events-none bg-[url('/src/assets/bg.svg')] bg-cover bg-center"
    >
    </div>

    <!-- Floating Founder Card - Only on larger screens -->
    <div
      class="hidden lg:block absolute bottom-[2%] right-[5%] z-30 w-64 p-4 bg-white/80 rounded-xl shadow-lg border border-gray-200 backdrop-blur-sm"
    >
      <div class="flex items-center gap-3">
        <img
          src="https://randomuser.me/api/portraits/men/32.jpg"
          class="w-10 h-10 rounded-full"
          alt="Founder"
        />
        <div>
          <div class="font-bold text-sm">Alex Founder</div>
          <div class="text-xs text-gray-500">
            Building: <span class="font-semibold">Appify</span>
          </div>
        </div>
      </div>
      <div class="mt-2 text-xs text-gray-700">
        "Looking for a technical cofounder!"
      </div>
    </div>
    <!-- Simple bubble - Show on medium+ -->
    <div
      class="hidden lg:block absolute bottom-[10%] left-[15%] z-20 w-40 p-3 bg-white/70 rounded-lg shadow border border-gray-100 backdrop-blur-sm"
    >
      <div class="text-xs font-semibold">💬 "Let's connect!"</div>
    </div>
    <!-- Challenge Card - Only on XL screens -->
    <div
      class="hidden lg:flex absolute right-28 bottom-24 z-20 w-96 max-w-xs p-6 bg-white/90 rounded-2xl shadow-xl border border-gray-200 backdrop-blur-sm flex-col gap-2"
    >
      <div class="font-bold text-lg text-[#FBBF24]">
        🚀 Build a Mobile MVP, Fast!
      </div>
      <div><p class="text-xs text-gray-400">Co-Founder Challenge</p></div>
      <div class="text-xs text-gray-700">
        Prototype a React Native app for peer-to-peer skill matching. All
        experience levels welcome—show what you can do!
      </div>
      <div class="flex flex-wrap gap-2 mt-2">
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >React Native</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >UI/UX</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >Async</span
        >
        <span
          class="bg-yellow-100 text-yellow-800 text-[10px] px-2 py-1 rounded-full font-semibold"
          >Equity Trial</span
        >
      </div>
      <button
        class="mt-3 self-start bg-[#FBBF24] text-white text-xs font-bold px-4 py-1.5 rounded shadow hover:bg-yellow-400 transition"
      >
        Join Challenge
      </button>
    </div>

    <!-- Keep one conversation bubble on large screens -->
    <div
      class="hidden lg:block absolute bottom-32 left-[10%] z-20 w-44 p-3 bg-white/70 rounded-lg shadow border border-gray-100 backdrop-blur-sm"
    >
      <div class="text-xs font-semibold">"I've got this idea…"</div>
    </div>
    <!-- Search Bar - Show on large+ screens only -->
    <div
      class="hidden lg:flex absolute top-[32%] right-[20%] lg:right-[30%] lg:top-[26%] xl:right-[30%] xl:top-[33%] z-20 w-[35%] xl:w-[35%] max-w-lg p-0 bg-transparent items-center"
    >
      <span class="inline-flex items-center justify-center w-8 h-8 ml-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#FBBF24"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"
          ></path>
        </svg>
      </span>
      <!-- Search Bar Mockup -->
      <input
        type="text"
        value="Show me founders with real-world skills"
        readonly
        class="bg-white/70 border border-gray-200 rounded-full shadow text-sm font-medium w-full px-4 py-2.5 ml-2 text-gray-700 placeholder-gray-400 focus:outline-none cursor-default"
        style="pointer-events: none;"
      />
    </div>

    <!-- Main Hero Content -->
    <div
      class="flex flex-col items-start max-w-full lg:max-w-3xl xl:max-w-4xl text-left z-10 relative mt-24 sm:mt-12 md:mt-16 lg:mt-0"
    >
      <h1
        class="text-[40px] sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-[96px] font-regular tracking-tight font-['Fellix',_sans-serif] leading-[0.9] text-[#2A2A2A]"
      >
        Some Assembly Required
      </h1>
      <p
        class="text-base sm:text-lg md:text-xl lg:text-2xl max-w-lg lg:max-w-2xl font-['Fellix',_sans-serif] pt-4 sm:pt-5 md:pt-6 text-[#2A2A2A]/80 leading-relaxed"
      >
        Stop networking. Start building. The first founder platform designed for
        doing, not just talking. Find your missing pieces and create something
        extraordinary.
      </p>
      <div
        class="flex gap-3 font-['Fellix',_sans-serif] pt-6 sm:pt-8 w-[100%] xs:w-[50%] max-w-[400px]"
      >
        <button
          class="bg-[#FBBF24] text-white text-base font-medium px-6 py-3 rounded-lg shadow-md hover:bg-yellow-400 transition-all hover:shadow-lg w-[100%]"
          >Get Started</button
        >
        <button
          class="bg-white text-[#2A2A2A] text-base font-medium px-6 py-3 rounded-lg shadow-md hover:bg-yellow-400 hover:text-white transition-all hover:shadow-lg w-[100%]"
          >Learn More</button
        >
      </div>
    </div>
  </section>

  <!-- Creative Problem/Solution Timeline Section -->
  <section
    class="relative w-full min-h-screen bg-[#FEEDCC] pt-8 md:pt-16 lg:pt-24 xl:pt-32 px-4 flex flex-col overflow-x-clip"
  >
    <div
      class="flex flex-col px-4 md:px-8 lg:px-16 xl:px-24 pr-4 md:pr-8 lg:pr-16 xl:pr-32 pt-8 md:pt-12 lg:pt-16 xl:pt-20 pb-16 md:pb-32 lg:pb-24 rounded-3xl text-white bg-amber-950"
    >
      <h2
        class="text-4xl md:text-6xl lg:text-7xl xl:text-[96px] relative font-['Fellix',_sans-serif] pt-4 md:pt-8 lg:pt-12 text-white text-shadow-2xl pb-8 md:pb-12 lg:pb-16 xl:pb-20"
      >
        What's the deal?
      </h2>
      <div
        class="bg-amber-600 p-4 md:p-8 lg:p-12 xl:p-20 rounded-xl drop-shadow-lg flex flex-col gap-2 w-full lg:w-[95%] xl:w-[90%] relative z-20 mb-4 lg:mb-0"
      >
        <h3
          class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-['Fellix',_sans-serif]"
        >
          Tired of swiping for the most important decisions in your life?
        </h3>
        <p class="text-base md:text-lg lg:text-xl font-['Fellix',_sans-serif]">
          Skip the games. Browse founders like a database, filter by real
          skills, and connect with purpose.
        </p>
      </div>
      <div
        class="bg-amber-700 p-4 md:p-8 lg:p-12 xl:p-20 pr-4 md:pr-8 lg:pr-16 xl:pr-32 rounded-xl w-full lg:w-[98%] xl:w-[95%] drop-shadow-xl flex flex-col gap-2 relative lg:-mt-6 xl:bottom-10 ml-0 lg:ml-6 xl:ml-10 z-10 mb-4 lg:mb-0"
      >
        <h3
          class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-['Fellix',_sans-serif] pt-2 md:pt-4"
        >
          Walked a different path that gave you skills not credentials?
        </h3>
        <p class="text-base md:text-lg lg:text-xl font-['Fellix',_sans-serif]">
          Prove your worth through real-world challenges, peer review, and
          portfolio verification.
        </p>
      </div>
      <div
        class="bg-amber-800 p-4 md:p-8 lg:p-12 xl:p-20 rounded-xl w-full drop-shadow-lg flex flex-col gap-2 relative ml-0 lg:ml-12 xl:ml-20 z-0 lg:-mt-12"
      >
        <h3
          class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-['Fellix',_sans-serif] pt-2 md:pt-4"
        >
          Had enough of the same old playbook?
        </h3>
        <p class="text-base md:text-lg lg:text-xl font-['Fellix',_sans-serif]">
          Founders are trailblazers, not copycats. Write your own playbook and
          hit it out of the park.
        </p>
      </div>
    </div>
    <div
      class="grid grid-cols-1 md:flex md:flex-col md:grid-cols-2 gap-4 md:gap-6 lg:gap-8 mt-8 px-4 md:px-8 lg:px-12 text-[#2A2A2A]"
    >
      <h2
        class="text-center mt-24 mb-12 text:6xl md:text-5xl lg:text-6xl xl:text-[80px] 2xl:text-[96px] font-['Fellix',_sans-serif] text-[#2A2A2A] leading-tight"
      >
        What's different about Cira?
      </h2>
      <div class="flex flex-col xl:flex-row gap-4 md:gap-6 lg:gap-8">
        <div
          class="flex-1 bg-[#ffecd5] px-4 md:px-6 lg:px-8 py-8 md:py-12 lg:py-16 xl:py-20 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300"
        >
          <h4
            class="font-['Fellix',_sans-serif] mt-3 md:mt-4 lg:mt-6 text-left text-2xl sm:text-4xl"
          >
            Complete Freedom
          </h4>
          <div class="font-['Fellix',_sans-serif] text-left">
            <ul class="list-disc list-inside mb-4 mt-2">
              <li>No artificial limits.</li>
              <li>No daily swipe caps.</li>
              <li>No algorithm.</li>
            </ul>
            <span class="block"
              >Browse and filter the entire founder database based on your needs
              and discover connections at your own pace.</span
            >
          </div>
        </div>
        <div
          class="flex-1 bg-[#ffecd5] px-4 md:px-6 lg:px-8 py-8 md:py-12 lg:py-16 xl:py-20 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300 relative top-0 left-0"
        >
          <h4
            class="font-['Fellix',_sans-serif] my-3 md:my-4 lg:my-6 text-center lg:text-4xl w-full text-2xl sm:text-4xl"
          >
            Merit Over Credentials
          </h4>
          <p
            class="font-['Fellix',_sans-serif] flex flex-col gap-4 md:gap-6 lg:gap-8 text-left"
          >
            <span class="font-bold block"
              >Show your GitHub, not your diploma.</span
            >Here, founders are judged on real skills and actual work, not where
            they went to school.
          </p>
        </div>
        <div
          class="flex-1 bg-[#ffecd5] px-4 md:px-6 lg:px-8 py-8 md:py-12 lg:py-16 xl:py-20 rounded-xl shadow-2xl flex flex-col gap-2 justify-center items-center hover:translate-y-[-10px] transition-all duration-300"
        >
          <h4
            class="font-['Fellix',_sans-serif] my-3 md:my-4 lg:my-6 text-center lg:text-4xl w-full text-2xl sm:text-4xl"
          >
            Built for Every Founder
          </h4>
          <p class="font-['Fellix',_sans-serif] text-left">
            Stop worrying that you're not cut from the same boring cloth.
            Whether you're introverted, international, or unconventional—there's
            a place for you here.
          </p>
        </div>
      </div>
    </div>
  </section>
  <section
    class="py-16 md:py-20 lg:py-24 xl:py-32 min-h-screen flex items-start justify-start bg-[#FEEDCC]"
  >
    <div class="w-full relative flex flex-col gap-8 md:gap-12 lg:gap-16">
      <div
        class="ml-12 flex flex-col max-w-7xl lg:max-w-none items-start lg:items-start px-4 sm:px-6 md:px-12 lg:px-8 mb-8 md:mb-12"
      >
        <div
          class="flex flex-col items-start lg:items-start text-left mr-0 lg:mr-16 xl:mr-24 max-w-2xl lg:max-w-4xl"
        >
          <h2
            class="text-4xl md:text-5xl lg:text-6xl xl:text-[80px] 2xl:text-[96px] font-['Fellix',_sans-serif] text-[#2A2A2A] leading-tight"
          >
            The <span class="text-amber-400 font-bold">Almost Investors</span
            ><span
              class="block text-[#2A2A2A] text-lg md:text-xl lg:text-2xl xl:text-3xl mt-2"
              >So close to backing the next big thing</span
            >
          </h2>
          <p
            class="text-base md:text-lg lg:text-xl font-['Fellix',_sans-serif] pt-4"
          >
            Rejections represent trillions in missed returns from investors who
            chase credentials over creativity. While they stick to their tired
            playbook, the next generation of unicorns is building in plain
            sight. <span class="block my-2"
              >Tired of explaining why your unconventional path makes you the
              perfect founder?
            </span>
            <span class="block"></span>Stop justifying your journey to people
            who wouldn't recognize innovation if it came with a Harvard MBA.
          </p>
          <span
            class="block mt-2 text-base md:text-lg lg:text-xl font-bold font-['Fellix',_sans-serif] self-start"
            >Your weird is our wonderful.</span
          >
        </div>
      </div>
      <!-- Rejection Cards Section -->
      <div class="flex flex-col lg:flex-row gap-0 lg:gap-12 w-full">
        <!-- Left side - Rejection Collection -->
        <div
          class="flex flex-col gap-4 bg-amber-950 p-6 md:p-8 lg:p-12 lg:pl-0 rounded-none lg:rounded-r-2xl lg:w-1/3 border-b-4 border-amber-900 lg:border-b-0"
        >
          <div class="flex flex-col gap-2 lg:pl-6">
            <h2
              class="text-2xl md:text-3xl lg:text-4xl font-['Fellix',_sans-serif] text-white leading-tight"
            >
              The Rejection Collection
            </h2>
            <p
              class="text-base md:text-lg font-['Fellix',_sans-serif] text-white"
            >
              Greatest hits from the gatekeepers who missed the memo.
            </p>
          </div>
          <div class="space-y-3">
            {RejectCards.map((card) => <RejectCard {...card} />)}
          </div>
        </div>

        <!-- Right side - Catch-22 Compilation -->
        <div
          class="flex-1 h-fit bg-amber-950 text-white rounded-none lg:rounded-l-2xl p-6 md:p-8 lg:p-12"
        >
          <div class="relative">
            <h2
              class="text-2xl md:text-3xl lg:text-4xl xl:text-[48px] font-['Fellix',_sans-serif] p-4 md:p-6 pb-2 leading-tight"
            >
              The Catch-22 Compilation
            </h2>
            <div class="flex items-center justify-center">
              <span
                class="text-[48px] md:text-[60px] lg:text-[72px] absolute left-0 -top-12 md:-top-16 lg:-top-20 -rotate-16 drop-shadow-2xl"
                >🗑️</span
              >
              <span
                class="text-[48px] md:text-[60px] lg:text-[72px] absolute right-0 -top-10 md:-top-14 lg:-top-16 rotate-12 drop-shadow-2xl"
                >🤡</span
              >
            </div>
            <h4
              class="text-base md:text-lg lg:text-xl font-['Fellix',_sans-serif] p-4 md:p-6 pt-0"
            >
              It's time to start making sense.
            </h4>
          </div>
          <ul
            class="list-none list-inside text-sm md:text-base lg:text-lg font-['Fellix',_sans-serif] flex flex-col gap-3 md:gap-4 px-2"
          >
            <li
              class="p-2 md:p-3 lg:p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-1 md:gap-2"
            >
              <span class="block">Warm introductions only.</span>
              <span
                class="block text-xs md:text-sm bg-amber-800 text-white rounded-lg p-2 md:p-3 lg:p-4"
                >Translation: I need you to know people you don't know.</span
              >
            </li>
            <li
              class="p-2 md:p-3 lg:p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-1 md:gap-2"
            >
              <span class="block"> Traction required to get traction.</span>
              <span
                class="block text-xs md:text-sm bg-amber-800 text-white rounded-lg p-2 md:p-3 lg:p-4"
                >Translation: Build a product that people want before you have
                the resources to build it.</span
              >
            </li>
            <li
              class="p-2 md:p-3 lg:p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-1 md:gap-2"
            >
              <span class="block">
                Need a team to get funding to hire a team.</span
              >
              <span
                class="block text-xs md:text-sm bg-amber-800 text-white rounded-lg p-2 md:p-3 lg:p-4"
                >Translation: Be rich enough to work for free while recruiting
                other people to also work for free.</span
              >
            </li>
            <li
              class="p-2 md:p-3 lg:p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-1 md:gap-2"
            >
              <span class="block">
                Prove market fit before building product.
              </span>
              <span
                class="block text-xs md:text-sm bg-amber-800 text-white rounded-lg p-2 md:p-3 lg:p-4"
                >Translation: Convince people to buy something that doesn't
                exist yet.</span
              >
            </li>
            <li
              class="p-2 md:p-3 lg:p-4 bg-amber-700 rounded-xl hover:shadow-xl transition-all duration-300 flex flex-col gap-1 md:gap-2"
            >
              <span class="block">
                Must have paying customers to get funding.
              </span>
              <span
                class="block text-xs md:text-sm bg-amber-800 text-white rounded-lg p-2 md:p-3 lg:p-4"
                >Translation: Bootstrap to profitability, then we'll give you
                money you no longer desperately need.</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <section class="min-h-screen py-16 md:py-20 lg:py-24 bg-[#FEEDCC]">
    <div
      class="w-full h-full flex justify-start lg:justify-center items-center font-['Montez',_sans-serif] px-4 sm:px-6 md:px-12 lg:px-8"
    >
      <div
        class="bg-[ghostwhite] p-6 sm:p-8 md:p-12 lg:p-16 xl:p-24 w-full max-w-4xl rounded-2xl flex flex-col gap-4 md:gap-6 lg:gap-8 shadow-2xl"
      >
        <h2
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-[80px] font-['Montez',_sans-serif] text-left text-[#2A2A2A] leading-tight font-bold"
        >
          {manifestoTitle}
        </h2>
        <h3
          class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-['Montez',_sans-serif] text-left text-[#2A2A2A] leading-tight font-bold"
        >
          {manifestoSubtitle}
        </h3>
        <div class="flex flex-col gap-2 md:gap-3 lg:gap-4">
          {
            clauses.map((clause) => {
              // Regex to match the emoji at the start (handles most emoji cases)
              const match = clause.match(
                /^(\p{Emoji_Presentation}|\p{Extended_Pictographic}|\p{Emoji})\s?(.*)$/u
              );
              let emoji, text;
              if (match) {
                emoji = match[1];
                text = match[2];
              } else {
                // fallback: no emoji found
                emoji = "";
                text = clause;
              }
              return (
                <p class="text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl py-3 px-2 sm:p-3 md:p-4 border-b border-gray-300 text-left">
                  <span class="inline-flex items-center">
